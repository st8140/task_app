<div class="main-container">
  
  <h2 id="edit-title">スケジュール編集</h2>
  
  <%= render "shared/error_message" %>
  
  <%= form_for @post do |f| %>
    <table class="form">
      <tr>
        <th><%= f.label :post_title, "タイトル" %></th>
        <td><%= f.text_field :post_title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_at, "開始日" %></th>
        <td><%= f.date_field :start_at %></td>
      </tr>
      <tr>
        <th><%= f.label :end_at, "終了日" %></th>
        <td><%= f.date_field :end_at %></td>
      </tr>
      <tr>
        <th><%= f.label :is_all_day, "終日" %></th>
        <td class="check"><%= f.check_box :is_all_day, { class: "check_box"}, "true", "false" %>
        <br>終日の場合はチェックを入れます</td>
      </tr>
      <tr>
        <th><%= f.label :post_memo, "スケジュールメモ" %></th>
        <td><%= f.text_area :post_memo, size: "50x15"%></td>
      </tr>
    </table>
    <div>
      <ul>
        <li><%= f.submit "スケジュールの編集を完了する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
      </ul>
    </div>
  <% end %>
</div>

