<div class="main-container">
  <h2>スケジュール詳細</h2>
  
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @post.post_title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @post.start_at.strftime('%Y年 %m月 %d日') %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @post.created_at.strftime('%Y年 %m月 %d日') %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% if @post.is_all_day == "true" %>
          ○
        <% end %>
      </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @post.post_memo %></td>
    </tr>
  </table>
  
  <ul>
    <li>
      <p class="link"><%= link_to "スケジュール一覧に戻る", :posts %></p>
    </li>
    <li>
      <p class="link"><%= link_to "スケジュールを編集する", "/posts/#{@post.id}/edit" %></p>
    </li>
    <li>
      <p class="link"><%= link_to "スケジュールを削除", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %></p>
    </li>
 </ul>

</div>